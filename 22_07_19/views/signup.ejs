    <script>
        $(document).ready(function(){
            $("#signup").hide()
            $("#create").click(function(){
                $.get(
                    '/get_wallet',
                    function(result, status){
                        if(status == 'success'){
                            $('#floatingWallet').val(result.address).attr('readonly',true)
                            $("#signup").show()
                            $("#create").hide()
                        }
                    }
                )
            })
        })
    </script>

